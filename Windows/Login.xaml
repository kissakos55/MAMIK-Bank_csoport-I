<Window x:Class="BackEndWPF.Windows.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BackEndWPF.Windows"
        mc:Ignorable="d"
        Title="Belépés" Height="200" Width="300">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Felhasználói név:"></Label>
            <TextBox x:Name="usernameTextBox" Text="a"></TextBox>
            <Label Content="Jelszó:"></Label>
            <PasswordBox Password="a" x:Name="passwordTextBox"></PasswordBox>
            <Button Content="Bejelentkezés" Margin="5 5 5 5" Click="Login_Button"></Button>
        </StackPanel>
    </Grid>
</Window>
